@model P1_Bank.Models.Accounts.Checking
@{
    ViewData["Title"] = "Checking Deposit";
}

<h2>Deposit</h2>

<div>
    <h4>Checking Account:  @Html.DisplayFor(model => model.Id)</h4>
    <h5>@Html.DisplayNameFor(model => model.Balance) : @Html.DisplayFor(model => model.Balance) </h5>
    <div class="row">
        <div class="col-md-4">
            <hr />
            <form asp-action="Deposit">
                <div class="form-group">
                    <label class="control-label">Deposit Amount</label>
                    <input type="number" name="amount" step="0.01" min="0" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Deposit" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
